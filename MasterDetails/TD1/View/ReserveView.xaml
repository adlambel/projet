        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TD1.View"
        mc:Ignorable="d"
        Title="ReserveView" Height="100" Width="300">
    <Grid>
        <Label Content="Nombre de Places :" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="20" Width="91" FontSize="9"/>
        <TextBox Text="{Binding MatchToEdit.NbAchete, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Left" Height="23" Margin="106,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="46"/>
        <Button Content="Réserver !" HorizontalAlignment="Left" Margin="106,44,0,0" VerticalAlignment="Top" Width="69" Height="15" FontSize="9" Padding="auto" Click="Button_Click"/>

    </Grid>
</Window>
